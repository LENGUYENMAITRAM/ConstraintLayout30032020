<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/red"
        android:text="RED"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#FDFCFC"
        android:background="#f20"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/green"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/green"
        android:text="GREEN"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#FDFCFC"
        android:background="#2EC134"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/red"
        app:layout_constraintLeft_toLeftOf="@id/red"
        app:layout_constraintBottom_toTopOf="@id/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/blue"
        android:text="BLUE"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#FDFCFC"
        android:background="#2196F3"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/green"
        app:layout_constraintLeft_toLeftOf="@id/green"
        app:layout_constraintBottom_toTopOf="@id/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/orange"
        android:text="ORANGE"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#FDFCFC"
        android:background="#FF9800"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/blue"
        app:layout_constraintLeft_toLeftOf="@id/blue"
        app:layout_constraintBottom_toTopOf="@id/gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/gray"
        android:text="GRAY"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#FDFCFC"
        android:background="#AFB3AF"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/orange"
        app:layout_constraintLeft_toLeftOf="@id/orange"
        app:layout_constraintBottom_toTopOf="@id/pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/pink"
        android:text="PINK"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#FDFCFC"
        android:background="#F34680"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/gray"
        app:layout_constraintLeft_toLeftOf="@id/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>