<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/view1"
        android:text="1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#191818"
        android:background="#f20"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintRight_toLeftOf="@id/view2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/view2"
        android:text="2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#191818"
        android:background="#228826"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintBottom_toTopOf="@+id/view3"
        app:layout_constraintRight_toLeftOf="@id/view3"
        app:layout_constraintLeft_toRightOf="@id/view1"
        android:layout_width="0dp"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/view3"
        android:text="3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#191818"
        android:background="#C9DA23"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintRight_toLeftOf="@+id/view4"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintLeft_toRightOf="@id/view2"
        android:layout_width="0dp"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/view4"
        android:text="4"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#191818"
        android:background="#9C27B0"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:layout_constraintBottom_toTopOf="@+id/view5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/view3"
        android:layout_width="0dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/view5"
        android:text="5"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#191818"
        android:background="#B291B8"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        app:layout_constraintBottom_toTopOf="@+id/view6"
        app:layout_constraintRight_toLeftOf="@id/view4"
        app:layout_constraintLeft_toRightOf="@id/view6"
        android:layout_width="0dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/view6"
        android:text="6"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#191818"
        android:background="#982C25"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/view5"
        app:layout_constraintBottom_toTopOf="@+id/view7"
        app:layout_constraintRight_toLeftOf="@+id/view5"
        app:layout_constraintLeft_toRightOf="@id/view7"
        android:layout_width="0dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/view7"
        android:text="7"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#191818"
        android:background="#40C6BA"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/view6"
        app:layout_constraintRight_toLeftOf="@id/view6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="40dp"/>

</android.support.constraint.ConstraintLayout>